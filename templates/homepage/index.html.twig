{% extends "base.html.twig" %}

{% block body %}
<div class="container mt-5">
    <h1>Homepage index</h1>
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center activity">
                <div><span class="activity-done">Jobs ({{ jobs|length }})</span></div>
            </div>
            <div class="mt-3">
                <ul class="list list-inline">
                    {% for job in jobs %}
                        {{ include('component/job.html.twig') }}
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
